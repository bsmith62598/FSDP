@model FSDP.DATA.EF.OwnerVehicle

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Requested Repairs</h2>


@using (Html.BeginForm("Edit", "OwnerVehicles", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>OwnerVehicle</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.OwnerVehicleID)
    @Html.HiddenFor(model => model.Make)
    @Html.HiddenFor(model => model.Model)
    @Html.HiddenFor(model => model.OwnerID)
    @Html.HiddenFor(model => model.CarPhoto)
    @Html.HiddenFor(model => model.IsActive)
</div>

    <div class="form-group">
        @Html.LabelFor(model => model.RequestedRepairs, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.RequestedRepairs, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RequestedRepairs, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

